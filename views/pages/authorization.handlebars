<div class="black-container">
  <div class="opacity20"></div>
  <div class="container-auth opacity80">
    <div class="half-window">
      <form action="/authorization/login" method="POST" class="form-auth-login">
        <h3>YGallery</h3>
        <input class="input-form-auth" type="email" name="email" placeholder="Введите ваш email" />
        <input class="input-form-auth" type="password" name="password" placeholder="Пароль" />
        <small><a href="/authorization/reset-password">Забыли пароль?</a></small>
        <button class="btn btn-green" type="submit">
          Войти
        </button>
      </form>
    </div>

    <div class="side-container red-side-container">
      <div class="content-wrapper">
        <h5 class="font-white uppercase">
          Если вы еще не <br />
          зарегистрированы
        </h5>
        <a class="btn" href="#" id="open-register">Регистрация</a>
      </div>
    </div>
    <div class="half-window">
      <form action="/authorization/register" method="POST" class="form-auth-register">
        <h3>Регистрация</h3>
        <input type="text" name="name" class="input-form-auth" placeholder="Введите ваше имя" value="{{name}}" />
        <input type="email" name="email" class="input-form-auth" placeholder="Введите ваш email" />
        <input type="password" name="password" class="input-form-auth" placeholder="Пароль" />
        <button class="btn btn-red" type="submit">
          Подтвердить
        </button>
      </form>
    </div>
    <div class="side-container green-side-container">
      <div class="content-wrapper">
        <h5 class="font-white uppercase">
          Если у вас уже есть <br />
          аккаунт
        </h5>
        <a class="btn" href="#" id="open-login">Войти</a>
      </div>
    </div>
  </div>

</div>
<script src="../js/authorization.js"></script>